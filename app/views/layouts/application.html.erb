<!DOCTYPE html>
<html>
<head>
  <title>Photoman</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render :partial => 'menu' %>

<%= yield %>

<h2>Autoalbums</h2>

<% @images.each do |grouping,images|  %>
    <div class="images">
      <h3><%= grouping %></h3>
      <ul>
        <% images.each do |i| %>
          <li><img src="<%= i[:url] %>" /></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</body>
</html>
